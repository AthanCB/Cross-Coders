        <TextBlock Grid.Row="1" x:Name="SearchBlock" Width="100" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="130,0,0,0"/>
        <Grid Grid.Row="1" x:Name="Map">
            <m:Map x:Name="TheMap" CredentialsProvider="Av6IyPOcMfpxBW8cDwOjQGTYs2CSh_KYNbw1lMWt5S-w1mGyXN5Qdbzt7t8Bm2c5"  Center="37.7333,26.77" ZoomLevel="11" AnimationLevel="Full" />
