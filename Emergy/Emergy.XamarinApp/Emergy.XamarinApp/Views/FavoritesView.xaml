<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Emergy.XamarinApp.Views.FavoritesView"
             xmlns:vm="clr-namespace:Emergy.XamarinApp.ViewModels"
             BackgroundColor="#e2dede" Title="Αγαπημενα" Icon="ic_star_black_24dp.png">
  <ContentPage.BindingContext>
    <vm:UserViewViewModel/>
  </ContentPage.BindingContext>
  <ContentPage.Content>
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" >
      <ListView ItemsSource="{Binding Users}">
        <ListView.ItemTemplate>
          <DataTemplate>
            <TextCell Text="{Binding Username}"/>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
      <Label Text="Όνομα" TextColor="Black"/>
      <Entry x:Name="NameEntry"/>
      <Label Text="Επίθετο" TextColor="Black"/>
      <Entry x:Name="SurNameEntry"/>
      <Label Text="E-mail" TextColor="Black"/>
      <Entry x:Name="UsernameEntry" Unfocused="UsernameEntry_OnUnfocused" Focused="UsernameEntry_OnFocused"/>
      <Button Text="Πρόσθεσε"/>
    </StackLayout>
    </ContentPage.Content>
</ContentPage>